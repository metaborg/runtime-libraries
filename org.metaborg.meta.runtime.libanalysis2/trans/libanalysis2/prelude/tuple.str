module libanalysis2/prelude/tuple

imports
  libanalysis2/prelude/interfaces

rules // applicative

  pureT(|n): x -> <copy;ListToTuple> (n,x)

  tapp(s): (x) -> (<s> x)
  tapp(s1,s2): (x1,x2) -> (<s1> x1, <s2> x2)
  tapp(s1,s2,s3): (x1,x2,x3) -> (<s1> x1, <s2> x2, <s3> x3)
  tapp(s1,s2,s3,s4): (x1,x2,x3,x4) -> (<s1> x1, <s2> x2, <s3> x3, <s4> x4)
  tapp(s1,s2,s3,s4,s5): (x1,x2,x3,x4,x5) -> (<s1> x1, <s2> x2, <s3> x3, <s4> x4, <s5> x5)
