module libanalysis2/namebinding/Scopegraph

imports

  libanalysis2/Common
  libanalysis2/positioning/Base
  libanalysis2/namebinding/Identifiers

context-free syntax

  Graph.G = <
    scope graph {
      <{ScopeEntry "\n"}*>
      assocs = <{AssocEntry "\n"}*>
    }
  >
 
  ScopeEntry = <<ScopeId> = <Scope>>
 
  Scope.S = <
    {
      decls        = <{DeclId ", "}*>
      refs         = <{RefId ", "}*>
      direct edges = <{DirectEdgeEntry ", "}*>
      named edges  = <{NamedEdgeEntry ", "}*>
    }
  >
 
  DirectEdgeEntry = <<Label>/<ScopeId>/<Term>>
  NamedEdgeEntry = <<Label>/<RefId>/<Term>>
  AssocEntry = <<Pos> : <ScopeId>>
