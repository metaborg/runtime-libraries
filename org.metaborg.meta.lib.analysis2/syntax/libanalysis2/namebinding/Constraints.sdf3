module libanalysis2/namebinding/Constraints

imports

  libanalysis2/Common
  libanalysis2/namebinding/Identifiers
  libanalysis2/namebinding/Scopegraph
  libanalysis2/namebinding/Resolution
  libanalysis2/positioning/Base
  libanalysis2/solver/Errors
  libanalysis2/solver/VarOps

context-free syntax

  Constraint.FDecl          = <<DeclId> in <Scope>>
  Constraint.FRef           = <<RefId> in <Scope>>
  Constraint.FDirectEdge    = <<Label> import <Scope>/<Term> in <Scope>>
  Constraint.FNamedEdge     = <<Label> import <RefId>/<Term> in <Scope>>
  Constraint.FAssoc         = <<Pos> with <Scope>>

  Constraint.CAssoc         = [[DeclId] ~~> [Scope] [Message]]
  Constraint.CResolves      = [[RefId] |-[Labels]-> [DeclId] [Message]]

  Labels = <[<{Term ","}*>]>
  Labels = Var

context-free syntax

  Constraint.CDistinct      = <!<Names> <Message>>
  Constraint.CSubset        = <<Names> in <Names> <Message>>
  Constraint.CDisjoint      = <<Names> # <Names> <Message>>
  
  Names.Declarations  = <D(<NamespaceMatch>,<Scope>)>
  Names.References    = <R(<NamespaceMatch>,<Scope>)>
  Names.Visibles      = <V(<NamespaceMatch>,<Scope>)>
  Names.Reachables    = <W(<NamespaceMatch>,<Scope>)>

  Placeholder.NAMES   = <NAMES>